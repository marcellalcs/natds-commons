{
  "source": ["properties/**/*.json"],
  "platforms": {
    "svg": {
      "actions": ["optimize_svg_icon"],
      "buildPath": "build/svg/",
      "source": "assets/icons/"
    },
    "webfonts": {
      "actions": ["create_font_files"],
      "buildPath": "build/fonts/",
      "copyright": "2020 Natura & Co. Design System. Licensed under ISC",
      "description": "Icons for Natura Co. Design System",
      "fontId": "natds-icons",
      "fontName": "natds-icons",
      "fontHeight": 600,
      "fontStyle": "normal",
      "fontWeight": 400,
      "normalize": true,
      "source": "build/svg/"
    },
    "css": {
      "buildPath": "build/",
      "files": [{
        "destination": "natds-icons.css",
        "format": "css/icons"
      }]
    },
    "html": {
      "buildPath": "build/",
      "files": [{
        "destination": "index.html",
        "format": "html/icons"
      }]
    }
  }
}
